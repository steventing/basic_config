[user]
	email = steventing@realtek.com
	name = Steven Ting

[color]
	ui = true
	log = auto
	branch = auto
	status = auto
	diff = auto

[diff]
	tool = vimdiff
	guitool = meld

[difftool]
	prompt = false

[alias]
	co = checkout
	ci = commit
	di = diff
	st = status
	br = branch
	re = remote
	cp = cherry-pick
	lg = log  --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit -30
	d = difftool
	;s = "!f() { rev=${1-HEAD}; git difftool $rev^ $rev; }; f"
	s = "!f() { rev=${1-HEAD} file=${2}; git difftool $rev^ $rev -- $file; }; f"

[github-import]
	remote = origin

[merge]
	tool = vimdiff
[log]
	decorate = true
[push]
	default = simple
[core]
	pager = sed 's/\t/    /g' | less -R
[color "diff"]
	meta = blue black bold
[url "https://github.com/"]
        insteadOf = git@github.com:

[url "https://github.com/"]
        insteadOf = ssh://git@github.com/
